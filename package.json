{
  "name": "pinterest-slider-redux",
  "private": false,
  "devDependencies": {
    "babel-eslint": "*",
    "babel-plugin-transform-class-properties": "*",
    "babel-plugin-transform-decorators-legacy": "*",
    "babel-preset-es2015": "*",
    "babel-preset-react": "*",
    "babel-preset-stage-0": "*",
    "babelify": "*",
    "browserify": "*",
    "eslint": "*",
    "eslint-plugin-babel": "3.2.0",
    "eslint-plugin-react": "*",
    "exorcist": "*",
    "local-web-server": "*",
    "uglify": "*",
    "watchify": "*"
  },
  "engines": {
    "node": "0.10.x"
  },
  "babel": {
    "plugins": [
      "transform-class-properties",
      "transform-decorators-legacy"
    ],
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ]
  },
  "dependencies": {
    "flux": "*",
    "isomorphic-fetch": "*",
    "react": "*",
    "react-addons-css-transition-group": "*",
    "react-dom": "*"
  },
  "scripts": {
    "watch-sass": "sass --watch sass:css",
    "watch": "watchify src/index.js -t [ babelify ] -o build/app.js --debug --verbose",
    "build": "browserify src/index.js -t [ babelify ] --debug | exorcist build/app.js.map | uglifyjs -c > build/app.js"
  }
}
